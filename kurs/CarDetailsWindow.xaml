<Window x:Class="CarRentalApp.CarDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Характеристики автомобиля" MaxHeight="650" MinHeight="650" MaxWidth="450" MinWidth="450" Background="#1b1e31" Foreground="White">
    <Grid>
        <StackPanel Margin="10">
            <Image Name="CarImage" Width="350" Height="230" Margin="10" />
            <TextBlock Name="CarDetailsTextBlock" Margin="5" FontSize="14"/>
            <Button Content="Закрыть" Click="CloseButton_Click" Margin="5" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
