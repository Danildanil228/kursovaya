<Window x:Class="CarRentalApp.ManagersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджеры" Height="450" Width="800">
    <Grid>
        <DataGrid Name="ManagersDataGrid" AutoGenerateColumns="True" CanUserAddRows="True" CanUserDeleteRows="True"
                  Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Сохранить" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Удалить" Margin="5" Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
